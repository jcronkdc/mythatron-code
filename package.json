{
  "name": "mythatron-code",
  "displayName": "MythaTron Code",
  "description": "AI-powered coding assistant with smart cost optimization - Build faster, spend less",
  "version": "1.0.0",
  "publisher": "mythatron",
  "homepage": "https://mythatron.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcronkdc/claude-code"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ai",
    "mythatron",
    "copilot",
    "cursor",
    "assistant",
    "autocomplete",
    "claude",
    "gpt",
    "llama"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mythaTron.open",
        "title": "MythaTron: Open Chat",
        "icon": {
          "light": "media/icon-light.svg",
          "dark": "media/icon-dark.svg"
        }
      },
      {
        "command": "mythaTron.newChat",
        "title": "MythaTron: New Chat"
      },
      {
        "command": "mythaTron.showCostDetails",
        "title": "MythaTron: Show Cost Details"
      },
      {
        "command": "mythaTron.configureMCP",
        "title": "MythaTron: Configure MCP Servers"
      },
      {
        "command": "mythaTron.editRules",
        "title": "MythaTron: Edit Project Rules"
      },
      {
        "command": "mythaTron.toggleCompletions",
        "title": "MythaTron: Toggle Inline Completions"
      },
      {
        "command": "mythaTron.indexWorkspace",
        "title": "MythaTron: Index Workspace"
      },
      {
        "command": "mythaTron.sendSelection",
        "title": "MythaTron: Send Selection to Chat"
      },
      {
        "command": "mythaTron.generateCommit",
        "title": "MythaTron: Generate Commit Message"
      },
      {
        "command": "mythaTron.analyzeDeadCode",
        "title": "MythaTron: Find Dead Code"
      },
      {
        "command": "mythaTron.analyzeDeps",
        "title": "MythaTron: Analyze Dependencies"
      },
      {
        "command": "mythaTron.newProject",
        "title": "MythaTron: Create New Project"
      },
      {
        "command": "mythaTron.autoImport",
        "title": "MythaTron: Auto-fix Imports"
      },
      {
        "command": "mythaTron.showPrompts",
        "title": "MythaTron: Show Prompt Library"
      },
      {
        "command": "mythaTron.showHistory",
        "title": "MythaTron: Show Chat History"
      },
      {
        "command": "mythaTron.explainCode",
        "title": "MythaTron: Explain Code"
      },
      {
        "command": "mythaTron.refactorCode",
        "title": "MythaTron: Refactor Code"
      },
      {
        "command": "mythaTron.generateTests",
        "title": "MythaTron: Generate Tests"
      },
      {
        "command": "mythaTron.fixError",
        "title": "MythaTron: Fix Current Error"
      },
      {
        "command": "mythaTron.reviewCode",
        "title": "MythaTron: Review Code"
      },
      {
        "command": "mythaTron.showCostDashboard",
        "title": "MythaTron: Show Cost Dashboard"
      },
      {
        "command": "mythaTron.showSavings",
        "title": "MythaTron: Show Savings Report"
      },
      {
        "command": "mythaTron.clearCache",
        "title": "MythaTron: Clear All Caches"
      },
      {
        "command": "mythaTron.rollback",
        "title": "MythaTron: Rollback Last Change"
      },
      {
        "command": "mythaTron.exportCosts",
        "title": "MythaTron: Export Cost Report"
      },
      {
        "command": "mythaTron.checkCLIs",
        "title": "MythaTron: Check CLI Configurations"
      },
      {
        "command": "mythaTron.importCLIKeys",
        "title": "MythaTron: Import API Keys from CLIs"
      },
      {
        "command": "mythaTron.setupWizard",
        "title": "MythaTron: Setup Wizard"
      },
      {
        "command": "mythaTron.createRepo",
        "title": "MythaTron: Create GitHub Repository"
      },
      {
        "command": "mythaTron.pushToGitHub",
        "title": "MythaTron: Push to GitHub"
      },
      {
        "command": "mythaTron.preflightCheck",
        "title": "MythaTron: Run Preflight Check"
      },
      {
        "command": "mythaTron.forceValidation",
        "title": "MythaTron: Force Validation"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mythatron-code",
          "title": "MythaTron Code",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "mythatron-code": [
        {
          "type": "webview",
          "id": "mythaTron.chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "mythaTron.sendSelection",
          "when": "editorHasSelection",
          "group": "mythaTron@1"
        },
        {
          "command": "mythaTron.explainCode",
          "when": "editorHasSelection",
          "group": "mythaTron@2"
        },
        {
          "command": "mythaTron.refactorCode",
          "when": "editorHasSelection",
          "group": "mythaTron@3"
        },
        {
          "command": "mythaTron.reviewCode",
          "when": "editorHasSelection",
          "group": "mythaTron@4"
        }
      ],
      "scm/title": [
        {
          "command": "mythaTron.generateCommit",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mythaTron.open",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "mythaTron.newChat",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      },
      {
        "command": "mythaTron.sendSelection",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorHasSelection"
      },
      {
        "command": "mythaTron.autoImport",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "mythaTron.generateCommit",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ],
    "configuration": {
      "title": "MythaTron Code",
      "properties": {
        "mythaTron.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Anthropic API key",
          "scope": "application"
        },
        "mythaTron.model": {
          "type": "string",
          "default": "claude-sonnet-4-20250514",
          "enum": [
            "claude-sonnet-4-20250514",
            "claude-opus-4-20250514",
            "claude-3-5-sonnet-20241022",
            "claude-3-opus-20240229"
          ],
          "description": "Default Claude model to use"
        },
        "mythaTron.maxTokens": {
          "type": "number",
          "default": 8192,
          "description": "Maximum tokens in response"
        },
        "mythaTron.temperature": {
          "type": "number",
          "default": 0,
          "description": "Temperature for responses (0-1)"
        },
        "mythaTron.enableSmartRouting": {
          "type": "boolean",
          "default": true,
          "description": "Route simple tasks to cheaper models to save costs"
        },
        "mythaTron.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for GPT models (optional, for smart routing)"
        },
        "mythaTron.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key for Llama models (optional, for smart routing)"
        },
        "mythaTron.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL for local models"
        },
        "mythaTron.ollamaModel": {
          "type": "string",
          "default": "qwen2.5-coder:7b",
          "description": "Ollama model to use for simple tasks"
        },
        "mythaTron.enableCaching": {
          "type": "boolean",
          "default": true,
          "description": "Cache similar queries to reduce API calls"
        },
        "mythaTron.showCostTracking": {
          "type": "boolean",
          "default": true,
          "description": "Show cost tracking in status bar"
        },
        "mythaTron.enableInlineCompletions": {
          "type": "boolean",
          "default": false,
          "description": "Enable AI-powered inline completions (Tab autocomplete)"
        },
        "mythaTron.enableThinking": {
          "type": "boolean",
          "default": true,
          "description": "Enable extended thinking for complex tasks"
        },
        "mythaTron.requireConfirmation": {
          "type": "boolean",
          "default": false,
          "description": "Require confirmation for dangerous operations"
        },
        "mythaTron.maxIterations": {
          "type": "number",
          "default": 25,
          "description": "Maximum agent loop iterations per request"
        },
        "mythaTron.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index workspace on open"
        },
        "mythaTron.autoImportOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix missing imports on save"
        },
        "mythaTron.mcpServers": {
          "type": "object",
          "default": {},
          "description": "MCP server configurations (per-workspace override)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "package": "vsce package",
    "install-extension": "code --install-extension mythatron-code-1.0.0.vsix",
    "push": "./scripts/push.sh",
    "release": "npm run compile && npm run package && ./scripts/push.sh",
    "setup": "npm install && npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@types/ws": "^8.18.1",
    "glob": "^10.3.10",
    "groq-sdk": "^0.3.2",
    "ignore": "^5.3.0",
    "ollama": "^0.5.0",
    "openai": "^4.24.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.3"
  }
}

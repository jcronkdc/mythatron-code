{
  "name": "claude-code",
  "displayName": "Claude Code",
  "description": "AI-powered coding assistant with smart cost optimization - A complete Cursor alternative",
  "version": "2.1.0",
  "publisher": "justincronk",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "copilot",
    "cursor",
    "assistant",
    "autocomplete"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeCode.open",
        "title": "Claude Code: Open Chat",
        "icon": {
          "light": "media/icon-light.svg",
          "dark": "media/icon-dark.svg"
        }
      },
      {
        "command": "claudeCode.newChat",
        "title": "Claude Code: New Chat"
      },
      {
        "command": "claudeCode.showCostDetails",
        "title": "Claude Code: Show Cost Details"
      },
      {
        "command": "claudeCode.configureMCP",
        "title": "Claude Code: Configure MCP Servers"
      },
      {
        "command": "claudeCode.editRules",
        "title": "Claude Code: Edit Project Rules"
      },
      {
        "command": "claudeCode.toggleCompletions",
        "title": "Claude Code: Toggle Inline Completions"
      },
      {
        "command": "claudeCode.indexWorkspace",
        "title": "Claude Code: Index Workspace"
      },
      {
        "command": "claudeCode.sendSelection",
        "title": "Claude Code: Send Selection to Chat"
      },
      {
        "command": "claudeCode.generateCommit",
        "title": "Claude Code: Generate Commit Message"
      },
      {
        "command": "claudeCode.analyzeDeadCode",
        "title": "Claude Code: Find Dead Code"
      },
      {
        "command": "claudeCode.analyzeDeps",
        "title": "Claude Code: Analyze Dependencies"
      },
      {
        "command": "claudeCode.newProject",
        "title": "Claude Code: Create New Project"
      },
      {
        "command": "claudeCode.autoImport",
        "title": "Claude Code: Auto-fix Imports"
      },
      {
        "command": "claudeCode.showPrompts",
        "title": "Claude Code: Show Prompt Library"
      },
      {
        "command": "claudeCode.showHistory",
        "title": "Claude Code: Show Chat History"
      },
      {
        "command": "claudeCode.explainCode",
        "title": "Claude Code: Explain Code"
      },
      {
        "command": "claudeCode.refactorCode",
        "title": "Claude Code: Refactor Code"
      },
      {
        "command": "claudeCode.generateTests",
        "title": "Claude Code: Generate Tests"
      },
      {
        "command": "claudeCode.fixError",
        "title": "Claude Code: Fix Current Error"
      },
      {
        "command": "claudeCode.reviewCode",
        "title": "Claude Code: Review Code"
      },
      {
        "command": "claudeCode.showCostDashboard",
        "title": "Claude Code: Show Cost Dashboard"
      },
      {
        "command": "claudeCode.showSavings",
        "title": "Claude Code: Show Savings Report"
      },
      {
        "command": "claudeCode.clearCache",
        "title": "Claude Code: Clear All Caches"
      },
      {
        "command": "claudeCode.rollback",
        "title": "Claude Code: Rollback Last Change"
      },
      {
        "command": "claudeCode.exportCosts",
        "title": "Claude Code: Export Cost Report"
      },
      {
        "command": "claudeCode.checkCLIs",
        "title": "Claude Code: Check CLI Configurations"
      },
      {
        "command": "claudeCode.importCLIKeys",
        "title": "Claude Code: Import API Keys from CLIs"
      },
      {
        "command": "claudeCode.setupWizard",
        "title": "Claude Code: Setup Wizard"
      },
      {
        "command": "claudeCode.createRepo",
        "title": "Claude Code: Create GitHub Repository"
      },
      {
        "command": "claudeCode.pushToGitHub",
        "title": "Claude Code: Push to GitHub"
      },
      {
        "command": "claudeCode.preflightCheck",
        "title": "Claude Code: Run Preflight Check"
      },
      {
        "command": "claudeCode.forceValidation",
        "title": "Claude Code: Force Validation"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code",
          "title": "Claude Code",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "claude-code": [
        {
          "type": "webview",
          "id": "claudeCode.chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "claudeCode.sendSelection",
          "when": "editorHasSelection",
          "group": "claudeCode@1"
        },
        {
          "command": "claudeCode.explainCode",
          "when": "editorHasSelection",
          "group": "claudeCode@2"
        },
        {
          "command": "claudeCode.refactorCode",
          "when": "editorHasSelection",
          "group": "claudeCode@3"
        },
        {
          "command": "claudeCode.reviewCode",
          "when": "editorHasSelection",
          "group": "claudeCode@4"
        }
      ],
      "scm/title": [
        {
          "command": "claudeCode.generateCommit",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claudeCode.open",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k"
      },
      {
        "command": "claudeCode.newChat",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      },
      {
        "command": "claudeCode.sendSelection",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorHasSelection"
      },
      {
        "command": "claudeCode.autoImport",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "claudeCode.generateCommit",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ],
    "configuration": {
      "title": "Claude Code",
      "properties": {
        "claudeCode.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Anthropic API key",
          "scope": "application"
        },
        "claudeCode.model": {
          "type": "string",
          "default": "claude-sonnet-4-20250514",
          "enum": [
            "claude-sonnet-4-20250514",
            "claude-opus-4-20250514",
            "claude-3-5-sonnet-20241022",
            "claude-3-opus-20240229"
          ],
          "description": "Default Claude model to use"
        },
        "claudeCode.maxTokens": {
          "type": "number",
          "default": 8192,
          "description": "Maximum tokens in response"
        },
        "claudeCode.temperature": {
          "type": "number",
          "default": 0,
          "description": "Temperature for responses (0-1)"
        },
        "claudeCode.enableSmartRouting": {
          "type": "boolean",
          "default": true,
          "description": "Route simple tasks to cheaper models to save costs"
        },
        "claudeCode.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for GPT models (optional, for smart routing)"
        },
        "claudeCode.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key for Llama models (optional, for smart routing)"
        },
        "claudeCode.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL for local models"
        },
        "claudeCode.ollamaModel": {
          "type": "string",
          "default": "qwen2.5-coder:7b",
          "description": "Ollama model to use for simple tasks"
        },
        "claudeCode.enableCaching": {
          "type": "boolean",
          "default": true,
          "description": "Cache similar queries to reduce API calls"
        },
        "claudeCode.showCostTracking": {
          "type": "boolean",
          "default": true,
          "description": "Show cost tracking in status bar"
        },
        "claudeCode.enableInlineCompletions": {
          "type": "boolean",
          "default": false,
          "description": "Enable AI-powered inline completions (Tab autocomplete)"
        },
        "claudeCode.enableThinking": {
          "type": "boolean",
          "default": true,
          "description": "Enable extended thinking for complex tasks"
        },
        "claudeCode.requireConfirmation": {
          "type": "boolean",
          "default": false,
          "description": "Require confirmation for dangerous operations"
        },
        "claudeCode.maxIterations": {
          "type": "number",
          "default": 25,
          "description": "Maximum agent loop iterations per request"
        },
        "claudeCode.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index workspace on open"
        },
        "claudeCode.autoImportOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix missing imports on save"
        },
        "claudeCode.mcpServers": {
          "type": "object",
          "default": {},
          "description": "MCP server configurations (per-workspace override)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "package": "vsce package",
    "install-extension": "code --install-extension claude-code-2.1.0.vsix",
    "push": "./scripts/push.sh",
    "release": "npm run compile && npm run package && ./scripts/push.sh",
    "setup": "npm install && npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@types/ws": "^8.18.1",
    "glob": "^10.3.10",
    "groq-sdk": "^0.3.2",
    "ignore": "^5.3.0",
    "ollama": "^0.5.0",
    "openai": "^4.24.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.3"
  }
}
